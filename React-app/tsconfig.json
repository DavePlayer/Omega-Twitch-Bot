{
  "compilerOptions": {
    "jsx": "react", // support for JSX .tsx files
    "module": "commonjs", //general module code
    "noImplicitAny": true, //rise errors when type is implied as any
    "outDir": "./out/", // output directory
    "sourceMap": true, // generates .amp file used for debbuging
    "target": "es5", // ECMAScript version which compilator is going to convert our code to
    "esModuleInterop": true // Necessary when using ES6 imports
  },
  "include": [ // specifying main script
    "./"
  ]
}
